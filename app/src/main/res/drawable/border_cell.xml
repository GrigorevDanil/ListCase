<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:startColor="#CBCBCB"
                        android:endColor="#6A6A6A"/>
                    <corners
                        android:radius="15dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" >
                    <corners
                        android:radius="15dp"
                        />
                    <gradient
                        android:angle="90"
                        android:centerX="50%"
                        android:startColor="#D4D4D4"
                        android:endColor="#DFDFDF"
                        android:type="linear"
                        />

                </shape>
            </item>
        </layer-list>

    </item>

</selector>
