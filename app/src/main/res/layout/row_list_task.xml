<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_cell_delete"
        android:layout_gravity="right"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Удалить"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font"
            android:textSize="24dp"
            android:gravity="right|center"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/icon_bucket"
            android:layout_weight="3"
            android:layout_gravity="center" />



    </LinearLayout>






    <LinearLayout
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_cell"
        android:paddingBottom="25dp">

        <CheckBox
            android:id="@+id/checkboxComplete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Супер важное дело"

                android:gravity="center"
                android:fontFamily="@font/main_font"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/imageCategory"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.1"
                        android:background="@drawable/icon_category"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="Категория:"
                        android:textSize="12dp"
                        android:gravity="center|left"
                        android:textColor="@color/black"
                        android:fontFamily="@font/main_font"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="12.02.2000 8:00"
                    android:layout_marginLeft="5dp"

                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                            <ImageView
                                android:id="@+id/imageFire"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_weight="0.1"
                                android:background="@drawable/fire"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/txtTitleDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:text="Дедлайн:"
                                android:textSize="12dp"
                                android:gravity="center|left"
                                android:textColor="@color/black"
                                android:fontFamily="@font/main_font"
                                />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtDeadLine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="12.02.2000 8:00"
                        android:layout_marginLeft="5dp"

                        android:gravity="center|left"
                        android:textColor="@color/black"
                        android:fontFamily="@font/main_font"
                        />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/imageClock"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.1"
                        android:background="@drawable/icon_clock"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtTitleDateCreate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="Дата создания:"
                        android:textSize="12dp"
                        android:gravity="center|left"
                        android:textColor="@color/black"
                        android:fontFamily="@font/main_font"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtDateCreate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="12.02.2000 8:00"
                    android:layout_marginLeft="5dp"

                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</FrameLayout>

